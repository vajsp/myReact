{
    "compilerOptions": {
        "baseUrl": "./packages/",
        "target": "ES6",
        "paths": {
            "hostConfig": ["./react-dom/src/hostConfig.ts"]
        },
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["mock/**/*", "packages/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "src/.umi/*",
        "webpack",
        "jest"
    ]
}
